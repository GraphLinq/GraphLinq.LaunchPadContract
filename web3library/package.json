{
  "name": "fundraiserlib",
  "type": "module",
  "files": [
    "web3library/dist"
  ],
  "main": "./dist/fundraiserlib.umd.js",
  "typings": "./dist/web3library/index.d.ts",
  "module": "./dist/fundraiserlib.es.js",
  "exports": {
    ".": {
      "import": "./dist/fundraiserlib.es.js",
      "require": "./dist/fundraiserlib.umd.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build-config": "tsc rollup.config.ts --outDir ./dist",
    "build": "tsc && yarn build-config && rollup --config ./dist/rollup.config.js",
    "test": "ts-mocha test/tests.spec.ts",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@types/mocha": "^10.0.10",
    "chai": "^5.1.1",
    "ethereum-waffle": "^4.0.10",
    "ethers": "6.13.4",
    "mocha": "^10.8.2"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/node": "^22.9.1",
    "rimraf": "^5.0.0",
    "rollup": "^4.27.3",
    "rollup-plugin-typescript2": "^0.35.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.6.3"
  }
}
